<table class="table">
    <thead>
    <tr>
        <th>Nom</th>
        <th>Prenom</th>
        <% @presences.each do |j| %>
            <% if j.elefe_id == @eleves[0].id %>
                <th><%= j.datecours.day %>/<%= j.datecours.month %></th>
            <% end %>
        <% end %>
    </tr>
    </thead>

    <tbody>
    <% @eleves.each do |elefe|  %>
        <tr>
            <td><%= elefe.nom %></td>
            <td><%= elefe.prenom %></td>
            <% @presences.each do |j| %>
                <% if j.elefe_id == elefe.id %>
                    <td><%= j.etat %></td>
                <% end %>
            <% end %>
        </tr>
    <% end %>

    </tbody>
    <tbody>
        <tr>
            <td><strong>Encadrant</strong></td>
            <td></td>
            <% @presences.each do |j| %>
                <% if j.elefe_id == @eleves[0].id %>
                    <td>
                        <%= @enseignants.find(j.enseignant_id).nom %>
                    </td>
                <% end %>
            <% end %>

        </tr>
    </tbody>
</table>


