<h1>Inscription Batigrado</h1>


<h4>Sélectionnez votre évènement:</h4>

<%= form_for :resp do |f| %>
    <% @batigrados.each do |batigrado| %>
        <%= f.radio_button :sel_bat, batigrado.id %>
        <%= f.label :sel_bat, batigrado.titre %>
    <% end %>
    <div class="actions text-center">
        <%= f.submit:go, value: "Valider", class: "btn btn-primary btn-lg" %>
    </div>
<% end %>

<%= render 'form', com_batigrado: @com_batigrado %>

<%= link_to 'Retour', com_batigrados_path %>
