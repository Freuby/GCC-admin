<h2>M'envoyer les instructions de déblocage de compte</h2>

<%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="actions">
    <%= f.submit "Envoyer les instructions de déblocage", class: "btn btn-primary btn-lg" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
