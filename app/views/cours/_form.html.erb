<%= form_for(cour) do |f| %>
  <% if cour.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(cour.errors.count, "error") %> prohibited this cour from being saved:</h2>

      <ul>
      <% cour.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <div class="field">
        <%= f.label :enseignant_id, "Enseignant référant" %>
        <%= f.select :enseignant_id, @enseignants.collect { |p| [p.prenom+' '+p.nom, p.id] }, {}, class: "form-control" %>
    </div>

  <div class="field">
    <%= f.label :nomvil, "Nom de la ville", class: "form-label" %>
    <%= f.text_field :nomvil, class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :adresse, "Adresse" %>
    <%= f.text_area :adresse, class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :cp, "Code Postal" %>
    <%= f.text_field :cp, class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :telephon, "Téléphone" %>
    <%= f.text_field :telephon, class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :acb, "Type de cours" %><br />
    <%= f.radio_button :acb, true, :checked => true %>
    <%= f.label :acb, "Cours géré par l'Association Culture Brésil (ACB)" %>
    <%= f.radio_button :acb, false %>
    <%= f.label :acb, "Cours géré par une mairie" %>
    <br/>
    <%= f.radio_button :typcours, 0 %>
    <%= f.label :typcours, "Adultes" %>
    <%= f.radio_button :typcours, 1 %>
    <%= f.label :typcours, "Enfants" %>
    <%= f.radio_button :typcours, 2 %>
    <%= f.label :typcours, "Mixte" %>
  </div>

  <div class="field">
    <%= f.label :jour, "Jour du cours" %>
    <%= f.select :jour, ['lundi', 'mardi','mercredi','jeudi','vendredi','samedi','dimanche'], {}, class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :dateh, "Heure de début du cours" %>
    <%= f.time_select :dateh, {minute_step: 15} %>
  </div>

  <div class="field">
    <%= f.label :duree, "Durée du cours" %>
    <%= f.time_select :duree, {minute_step: 15, start_hour: 1, end_hour: 5} %>
  </div>

  <div class="field">
    <%= f.label :mailpres, "Mail d'accès à la gestion des présences (le mot de passe sera 1234567 pour le 1er accès)" %>
    <%= f.text_field :mailpres, class: "form-control" %>
  </div>

  <br/>
  <div class="actions text-center">
    <%= f.submit :go, value: "Valider", class: "btn btn-primary btn-lg" %>
  </div>
  <br/>
<% end %>
