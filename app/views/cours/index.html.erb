<p id="notice"><%= notice %></p>

<h1>Cours</h1>

<table>
  <thead>
    <tr>
      <th>Nomvil</th>
      <th>Adresse</th>
      <th>Cp</th>
      <th>Telephon</th>
      <th>Typcours</th>
      <th>Dateh</th>
      <th>Duree</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cours.each do |cour| %>
      <tr>
        <td><%= cour.nomvil %></td>
        <td><%= cour.adresse %></td>
        <td><%= cour.cp %></td>
        <td><%= cour.telephon %></td>
        <td><%= cour.typcours %></td>
        <td><%= cour.dateh %></td>
        <td><%= cour.duree %></td>
        <td><%= link_to 'Show', cour %></td>
        <td><%= link_to 'Edit', edit_cour_path(cour) %></td>
        <td><%= link_to 'Destroy', cour, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

