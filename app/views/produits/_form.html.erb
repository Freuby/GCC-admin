    <p>* champs obligatoire</p>
    <div class="row">
      <div class="field col-12 col-md-6">
        <%= f.label :ref, "Référence *" %>
        <%= f.text_field :ref, class: "form-control "+field_class(produit, :ref) %>
     </div>

      <div class="field col-12 col-md-6">
        <%= f.label :nom, "Nom *" %>
        <%= f.text_field :nom, class: "form-control "+field_class(produit, :nom) %>
      </div>

      <div class="field col-12 col-md-6">
        <%= f.label :couleur %>
        <%= f.text_field :couleur, class: "form-control " %>
      </div>

      <div class="field col-12 col-md-6">
        <%= f.label :taille %>
        <%= f.text_field :taille, class: "form-control " %>
      </div>
