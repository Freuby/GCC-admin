      </div>

      <div class="field col-12 col-md-6">
        <br/>
        <%= f.check_box :dispo %>
        <%= f.label :dispo, "Produit en stock" %>
      </div>

      <div class="field col-12 col-md-6">
        <%= f.label :stock, "Nombre en stock" %>
