<p id="notice"><%= notice %></p>

<h1>Produits</h1>



    <div class="row">
    <% @produits.each do |produit| %>
      <div class="col-12 col-md-4">
        <div class="card" style="padding: 15px;">
          <div class="img-card">
            <%= image_tag produit.photo1.url(:medium), class: "card-img-top img-fluid", style: "width: 50%; margin: auto;" %>
          </div>
          <div class="card-block">
            <h4 class="card-title"><%= produit.nom %></h4>
            <p class="card-text"><%= produit.descriptif[0..50] + '...' %></p>
            <a href="<%= produit_path(produit) %>" class="btn btn-primary float-right">Voir</a>
            <br/><br/><hr/>
            <h2 class="float-right" style="color: red;"><%= number_to_currency(produit.prix, unit: "", separator: ",", delimiter: "") %>&nbsp<i class="fa fa-eur" aria-hidden="true"></i></h2>
          </div>
        </div>
      </div>
    <% end %>
    </div>



