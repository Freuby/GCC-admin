<br/>
<div class="text-center">
  <%= image_tag @enseignant.photo.url(:medium), class: "img-fluid", id: "photo" %>
</div>
<br/>
<h5 class="text-center">
  <strong>Nom:</strong>
  <%= @enseignant.nom %>
</h5>
<br/>
<h5 class="text-center">
  <strong>Prénom:</strong>
  <%= @enseignant.prenom %>
</h5>
<br/>
<p class="text-center">
  <strong>Graduation:</strong>
    <%= @grades_adultes[@enseignant.graduation] %>
</p>

<p>
  <strong>Référant des cours de:</strong>
  <ul>
  <% @cours_ens.each do |c| %>
      <li><%= c.nomvil %> - <%= @typ_cours[c.typcours] %> les <%= c.jour.pluralize %> à <%= c.dateh.strftime("%Hh%M") %></li>
  <% end %>
  </ul>

</p>

<%= link_to 'Modifier', edit_enseignant_path(@enseignant) %> |
<%= link_to 'Retour',  request.referer.present? ? request.referer : root_path %>
